{
	"openapi": "3.0.1",
	"info": {
		"version": "1.0",
		"title": "Wallet",
		"description": "description of the methods"
	},
	"consumes": ["application/json"],
	"produces": ["application/json"],
	"servers": [
		{ "url": "https://wallet-project.onrender.com/api" },
		{ "url": "http://localhost:3000" }
	],
	"tags": [
		{ "name": "Auth", "description": "Authorization endpoints" },
		{ "name": "Transactions", "description": "Transactions endpoints" }
	],
	"paths": {
		"/users/signup": {
			"post": {
				"tags": ["Auth"],
				"summary": "Signup user",
				"parameters": [],
				"requestBody": {
					"description": "Registration's object",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/UserRegistrationRequest"
							}
						}
					}
				},
				"responses": {}
			}
		},
		"/users/login": {
			"post": {
				"tags": ["Auth"],
				"summary": "Login user",
				"parameters": [],
				"requestBody": {
					"description": "Registration's object",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/UserLoginRequest"
							}
						}
					}
				},
				"responses": {}
			}
		},
		"/users/logout": {
			"get": {
				"tags": ["Auth"],
				"summary": "Logout user",
				"parameters": [],
				"responses": {}
			}
		},
		"/transactions": {
			"post": {
				"tags": ["Transactions"],
				"summary": "Ð¡reating a transaction",
				"parameters": [],
				"requestBody": {
					"description": "Registration's object",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/TransactionsRegistrationRequest"
							}
						}
					}
				},
				"responses": {}
			},
			"get": {
				"tags": ["Transactions"],
				"summary": "Get user's transactions",
				"parameters": [],

				"responses": {}
			}
		},
		"/transactions/categories": {
			"get": {
				"tags": ["Transactions"],
				"summary": "Get categories of transactions",
				"parameters": []
			}
		}
	},
	"components": {
		"schemas": {
			"UserRegistrationRequest": {
				"type": "object",
				"required": ["email", "password", "firstName"],
				"properties": {
					"email": {
						"type": "string",
						"description": "User's email",
						"format": "email"
					},
					"password": {
						"type": "string",
						"description": "User's password",
						"example": "qwerty123"
					},

					"firstName": {
						"type": "string",
						"description": "User's first name"
					}
				}
			},
			"UserLoginRequest": {
				"type": "object",
				"required": ["email", "password"],
				"properties": {
					"email": {
						"type": "string",
						"description": "User's email",
						"format": "email"
					},
					"password": {
						"type": "string",
						"description": "User's password",
						"example": "qwerty123"
					}
				}
			},
			"TransactionsRegistrationRequest": {
				"type": "object",
				"required": ["type", "category", "sum"],
				"properties": {
					"type": {
						"type": "string",
						"description": "Transactions type"
					},
					"category": {
						"type": "string",
						"description": "Transactions category"
					},

					"sum": {
						"type": "number",
						"description": "Sum of transaction "
					}
				}
			}
		}
	}
}

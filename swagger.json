{
	"openapi": "3.0.1",
	"info": {
		"version": "1.0",
		"title": "Wallet",
		"description": "description of the methods"
	},
	"consumes": ["application/json"],
	"produces": ["application/json"],
	"servers": [
		{ "url": "https://wallet-project.onrender.com/api" },
		{ "url": "http://localhost:3000/api" }
	],
	"tags": [
		{ "name": "Auth", "description": "Authorization endpoints" },
		{ "name": "Transactions", "description": "Transactions endpoints" }
	],
	"paths": {
		"/users/register": {
			"post": {
				"tags": ["Auth"],
				"summary": "Signup user",
				"parameters": [],
				"requestBody": {
					"description": "Registration's object",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/UserRegistrationRequest"
							}
						}
					}
				},
				"responses": {}
			}
		},
		"/users/login": {
			"post": {
				"tags": ["Auth"],
				"summary": "Login user",
				"parameters": [],
				"requestBody": {
					"description": "Registration's object",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/UserLoginRequest"
							}
						}
					}
				},
				"responses": {}
			}
		},
		"/users/logout": {
			"get": {
				"tags": ["Auth"],
				"summary": "Logout user",
				"parameters": [],
				"responses": {}
			}
		},
		"/transactions": {
			"post": {
				"tags": ["Transactions"],
				"summary": "Ð¡reating a transaction",
				"parameters": [],
				"security": [{ "Bearer": [] }],
				"requestBody": {
					"description": "Registration's object",
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/TransactionsRegistrationRequest"
							}
						}
					}
				},
				"responses": {}
			},
			"get": {
				"tags": ["Transactions"],
				"summary": "Get user's transactions",
				"parameters": [],
				"security": [{ "Bearer": [] }],

				"responses": {}
			}
		},
		"/transactions/categories": {
			"get": {
				"tags": ["Transactions"],
				"summary": "Get categories of transactions",
				"parameters": []
			}
		},
		"/transactions/statistics": {
			"get": {
				"tags": ["Transactions"],
				"summary": "Get statistics of transactions",
				"parameters": [
					{
						"in": "query",
						"name": "month",
						"required": false,
						"type": "string",
						"description": "Month of transaction (string 0-11)",
						"example": "3"
					},
					{
						"in": "query",
						"name": "year",
						"required": false,
						"type": "string",
						"description": "Year of transaction (string)",
						"example": "2021"
					}
				],
				"security": [{ "Bearer": [] }],
				"responses": {}
			}
		}
	},
	"components": {
		"schemas": {
			"UserRegistrationRequest": {
				"type": "object",
				"required": ["email", "password", "firstName"],
				"properties": {
					"email": {
						"type": "string",
						"description": "User's email",
						"format": "email"
					},
					"password": {
						"type": "string",
						"description": "User's password",
						"example": "qwerty123"
					},

					"firstName": {
						"type": "string",
						"description": "User's first name"
					}
				}
			},
			"UserLoginRequest": {
				"type": "object",
				"required": ["email", "password"],
				"properties": {
					"email": {
						"type": "string",
						"description": "User's email",
						"format": "email"
					},
					"password": {
						"type": "string",
						"description": "User's password",
						"example": "qwerty123"
					}
				}
			},
			"TransactionsRegistrationRequest": {
				"type": "object",
				"required": ["typeOperation", "category", "typeOperation"],
				"properties": {
					"typeOperation": {
						"type": "string",
						"enum": ["income", "expense"],
						"description": "Transactions type"
					},
					"category": {
						"type": "string",
						"description": "Transactions category"
					},
					"comment": {
						"type": "string",
						"description": "Transactions comment"
					},

					"amount": {
						"type": "number",
						"description": "Sum of transaction "
					},
					"date": {
						"type": "string",
						"description": "Date of transaction "
					}
				}
			}
		},
		"securitySchemes": {
			"Bearer": {
				"type": "http",
				"scheme": "bearer",
				"bearerFormat": "JWT"
			}
		}
	}
}
